@model edasit.Data.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "USER SİL";
}
<form asp-action="Delete" asp-controller="User" method="post" class="mt-4">
    <input type="hidden" asp-for="UserNo" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning text-center fw-bold mb-4">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Bu user kaydını silmek üzeresiniz. Devam etmek istediğinize emin misiniz?</span>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Site Adı:</label>
                <p class="form-control-plaintext">@Model.AdSoyad</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Adres:</label>
                <p class="form-control-plaintext">@Model.Email</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Bilgi:</label>
                <p class="form-control-plaintext">@Model.Telefon</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Bilgi:</label>
                <p class="form-control-plaintext">@Model.Rol</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Şifre:</label>
                <p class="form-control-plaintext">@Model.Sifre</p>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4">Sil</button>
                <a asp-action="Index" asp-controller="Site" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </div>
    </div>
</form>

