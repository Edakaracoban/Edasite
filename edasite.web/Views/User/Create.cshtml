@model edasit.Data.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "USER OLUŞTUR";
}
<form asp-action="Create" asp-controller="User" method="post" class="mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-group mb-4">
                <label asp-for="AdSoyad" class="fw-bold form-label">Ad Soyad :</label>
                <input asp-for="AdSoyad" type="text" class="form-control" placeholder="Ad soyad giriniz" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Email" class="fw-bold form-label">Email :</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email giriniz" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Telefon" class="fw-bold form-label">Telefon :</label>
                <input asp-for="Telefon" type="text" class="form-control" placeholder="Telefon giriniz" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Rol" class="fw-bold form-label">Rol :</label>
                <input asp-for="Rol" type="text" class="form-control" placeholder="Rol giriniz" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Sifre" class="fw-bold form-label">Sifre :</label>
                <input asp-for="Sifre" type="text class="form-control" placeholder="Şifre giriniz" />
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-5">User Oluştur</button>
            </div>
        </div>
    </div>
</form>