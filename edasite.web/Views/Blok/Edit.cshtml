@model edasit.Data.Models.Blok
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "BLOK GÜNCELLE";
}
<form asp-action="Edit" asp-controller="Blok" method="post" class="mt-4">
    <input type="hidden" asp-for="BlokNo" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-group mb-4">
                <label asp-for="BlokAdi" class="fw-bold form-label">Blok Adı :</label>
                <input asp-for="BlokAdi" type="text" class="form-control" placeholder="Blok Adı giriniz" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="KatSayisi" class="fw-bold form-label">Kat Sayısı :</label>
                <input asp-for="KatSayisi" type="text" class="form-control" placeholder="Kat Sayısı giriniz" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="SiteNo" class="fw-bold form-label">Site No :</label>
                <select asp-for="SiteNo" class="form-control" asp-items="ViewBag.SiteNo"></select>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-5">Güncelle</button>
                <a asp-action="Index" asp-controller="Blok" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </div>
    </div>
</form>