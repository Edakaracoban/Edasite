@model edasit.Data.Models.Blok
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "BLOK SİL";
}
<form asp-action="Delete" asp-controller="Blok" method="post" class="mt-4">
    <input type="hidden" asp-for="BlokNo" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning text-center fw-bold mb-4">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Bu blok kaydını silmek üzeresiniz. Devam etmek istediğinize emin misiniz?</span>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Blok Adı:</label>
                <p class="form-control-plaintext">@Model.BlokAdi</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Kat Sayısı:</label>
                <p class="form-control-plaintext">@Model.KatSayisi</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Site No:</label>
                <p class="form-control-plaintext">@Model.SiteNo</p>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4">Sil</button>
                <a asp-action="Index" asp-controller="Blok" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </div>
    </div>
</form>
