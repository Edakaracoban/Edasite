@model edasit.Data.Models.Aidat
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "AİDAT SİL";
}
<form asp-action="Delete" asp-controller="Aidat" method="post" class="mt-4">
    <input type="hidden" asp-for="AidatNo" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning text-center fw-bold mb-4">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Bu aidat kaydını silmek üzeresiniz. Devam etmek istediğinize emin misiniz?</span>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Dönem:</label>
                <p class="form-control-plaintext">@Model.Donem</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Tutar:</label>
                <p class="form-control-plaintext">@Model.Tutar</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Ödeme Durumu:</label>
                <p class="form-control-plaintext">@Model.OdemeDurumu</p>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Site No:</label>
                <p class="form-control-plaintext">@Model.SiteNo</p>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4">Sil</button>
                <a asp-action="Index" asp-controller="Aidat" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </div>
    </div>
</form>
