@model edasit.Data.Models.User
@{
    ViewData["Title"] = "Giriş";
}
<div class="content">
    <div class="form-container">
        <h2 style="margin-bottom: 1.5rem;">Giriş Yap</h2>
        <form asp-action="Login" method="post">
            <input asp-for="Email" type="email" placeholder="E-posta adresiniz" required />
            <input asp-for="Sifre" type="password" placeholder="Şifreniz" required />
            <button type="submit">Giriş Yap</button>
        </form>
        <hr style="margin: 2rem 0; border-color: rgba(255,255,255,0.3);" />
        <p style="margin-bottom: 0.5rem;">Hesabınız yok mu?</p>
        <a class="btn btn-warning" href="/Account/Register" style="text-decoration: none; color: black; font-weight: bold; padding: 0.5rem 2rem; border-radius: 5px;">Kayıt Ol</a>
    </div>
</div>
