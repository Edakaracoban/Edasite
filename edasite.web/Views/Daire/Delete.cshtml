@model edasit.Data.Models.Daire
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "DAİRE SİL";
}
<form asp-action="Delete" asp-controller="Daire" method="post" class="mt-4">
    <input type="hidden" asp-for="DaireNo" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning text-center fw-bold mb-4">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Bu daire kaydını silmek üzeresiniz. Devam etmek istediğinize emin misiniz?</span>
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Metrekare:</label>
                <p class="form-control-plaintext">@Model.MetreKare</p>
            </div>
                <label class="fw-bold">User No:</label>
                <p class="form-control-plaintext">@Model.UserNo</p>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4">Sil</button>
                <a asp-action="Index" asp-controller="User" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </div>
</form>
