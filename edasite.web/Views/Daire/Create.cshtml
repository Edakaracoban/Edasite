@model edasit.Data.Models.Daire
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "DAİRE OLUŞTUR";
}
<form asp-action="Create" asp-controller="Daire" method="post" class="mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-group mb-4">
                <label asp-for="MetreKare" class="fw-bold form-label">Metrekare:</label>
                <input asp-for="MetreKare" type="number" class="form-control" placeholder="Metre kare giriniz" />

            </div>
            <div class="form-group mb-4">
                <label asp-for="UserNo" class="fw-bold form-label">User No :</label>
                <select asp-for="UserNo" class="form-control" asp-items="ViewBag.UserNo"></select>

            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-5">Daire Oluştur</button>
            </div>
        </div>
    </div>
</form>
